<section class="home">
  <h1 style="margin-bottom: 0;"><code>include</code></h1>
  <div class="container">
    <div class="row">
      <% data.tools.keys[0..5].each do |tool| %>
        <div class="col-6 col-sm-4 col-md-3 col-lg-2">
          <%= partial "components/language_card", locals: { tool: tool } %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="home-secondary">
    <h1><code>and</code></h1>

    <% count = 0 %>
    <% data.tools.keys[6..data.tools.keys.length].each do |tool| %>
      <% count += 1 %>
      <% link_to data.tools[tool].website, target: "_blank" do %>
        <h3 class="tool"><code class="language-*" data-tippy="<%= data.tools[tool].description %>" data-tippy-placement="<%= count % 2 == 0 ? "right" : "left" %>" data-tippy-distance="25"><%= tool %></code></h3>
      <% end %>
    <% end %>
  </div>

  <div class="home-buttons">
    <%= link_to "<i class='icomoon icomoon-middleman'></i> Read documentation", "/docs.html", class: "btn btn-yellow" %>
    <%= link_to "<i class='icomoon icomoon-github'></i> See on GitHub", data.site.repository, class: "btn btn-black" %>
  </div>
</section>
